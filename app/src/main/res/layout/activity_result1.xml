<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPink">

    <ImageView
        android:id="@+id/frame_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/frame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="202dp"
        android:layout_height="142.8dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="14dp"
        android:background="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="@id/frame_iv"
        app:layout_constraintTop_toTopOf="@id/frame_iv" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_iv"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/explanation_title_tv"
        android:text="1. 머리 "
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/explanation_tv"
        android:text="사소하고 귀찮은 일을 싫어하는 타입이다. "
        />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/explanation_title_tv"
        android:text="2. 꼬리 "
        />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/explanation_tv"
        android:text="온순하고 착한 성품을 지닌 당신은 내성적이라는 말을 종종 듣는다.  "
        />
    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv4"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/explanation_title_tv"
        android:text="3. 배 "
        />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv5"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/explanation_tv"
        android:text="당신은 활동적이고 외향적인 사람이다. "
        />
    <TextView
        android:id="@+id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv6"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/explanation_title_tv"
        android:text="4.  지느러미 "
        />

    <TextView
        android:id="@+id/tv8"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv7"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/explanation_tv"
        android:text="예술적 감성이 풍부하고 혼자 있는 시간을 즐기는 타입이다"/>

    <ImageView
        android:id="@+id/bottom_iv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/retry_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn_customise"
        app:layout_constraintTop_toTopOf="@id/bottom_iv"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/bottom_iv"
        android:layout_marginLeft="10dp"
        style="@style/retry_tv"
        android:text="@string/retry_name"
        android:drawableLeft="@drawable/refresh_cutsome"
        android:paddingLeft="10dp"

        />

    <Button
        android:id="@+id/home_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn_customise"
        app:layout_constraintTop_toTopOf="@id/bottom_iv"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="@id/bottom_iv"
        android:layout_marginRight="10dp"
        style="@style/retry_tv"
        android:text="@string/home_name"
        android:drawableLeft="@drawable/home_custome"
        android:paddingLeft="10dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>