<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPink">

    <ImageView
        android:id="@+id/frame_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="@drawable/frame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="202dp"
        android:layout_height="142.8dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="14dp"
        android:background="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="@id/frame_iv"
        app:layout_constraintTop_toTopOf="@id/frame_iv" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frame_iv"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/explanation_title_tv"
        android:text="1. 산 "
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/explanation_tv"
        android:text="산이 뾰족할수록 예민한 성격 "
        />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/explanation_title_tv"
        android:text="2. 나무 "
        />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/explanation_tv"
        android:text="나무의 개수가 많을수록 믿을 수 있는 친구가 많다. "
        />


    <ImageView
        android:id="@+id/bottom_iv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/retry_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn_customise"
        app:layout_constraintTop_toTopOf="@id/bottom_iv"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="@id/bottom_iv"
        android:layout_marginLeft="10dp"
        style="@style/retry_tv"
        android:text="@string/retry_name"
        android:drawableLeft="@drawable/refresh_cutsome"
        android:paddingLeft="10dp"

        />

    <Button
        android:id="@+id/home_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/main_btn_customise"
        app:layout_constraintTop_toTopOf="@id/bottom_iv"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="@id/bottom_iv"
        android:layout_marginRight="10dp"
        style="@style/retry_tv"
        android:text="@string/home_name"
        android:drawableLeft="@drawable/home_custome"
        android:paddingLeft="10dp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>